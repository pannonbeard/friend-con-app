<h2>Users</h2>

<% if current_user.role?(:admin) %>
  <%= link_to 'Back to Admin', admin_path, class: 'btn' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Shirt Size</th>
      <th>Attending Virtually</th>
      <th>Roles </th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td data-label='User Name'><%= user.name %></td>
        <td data-label='Email'><%= user.email %></td>
        <td data-label='Shirt Size'><%= user.shirt_size %></td>
        <td data-label='Attending Virtually'><%= user.attending_virtually %></td>
        <td data-label='Roles'><%= user.roles.map(&:name).join(", ") %></td>
        <td data-label='Actions'>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn' %>
          <%= link_to 'Remove', user, class: 'btn', data: { turbo_method: 'delete', confirm: 'Are you sure you want to remove this user?' }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
