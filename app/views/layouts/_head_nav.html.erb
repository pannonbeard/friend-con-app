<header id='header-with-nav'>
  <div class='container'>
    <h1 class='header-logo'>
      Friend Con
      <%= image_tag 'shield_white.png' %>
    </h1>

    <div class='hamburger-menu-select'>
      <%= image_tag 'burger-menu.svg' %>
    </div>

    <div class='header-nav'>
      <ul>
        <li><%= active_link_to 'Home', root_path, active: :exclusive %></li>
        <li><%= active_link_to 'Catalog', events_path, active: :exclusive %></li>
        <% if current_user %>
          <li><%= active_link_to 'Profile', edit_user_registration_path, active: :exclusive %></li>
          <li><%= active_link_to 'My Schedule', my_schedule_path, active: :exclusive %></li>
          <% if current_user.role?(:admin)%>
            <li><%= active_link_to 'Admin', admin_path, active: :exclusive %></li>
          <% end %>
        <% end %>
        <li>
          <% if current_user %>
            <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete } %>
          <% else %>
            <%= link_to 'Sign In', new_user_session_path %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>